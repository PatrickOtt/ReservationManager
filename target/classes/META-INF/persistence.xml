<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ReservationManagerPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>de.professional_webworkx.reservationmanager.model.Reservation</class>
		<properties>
			<property name="hibernate.connection.username" value="reservation"/>
			<property name="hibernate.connection.password" value="reservationManager"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/reservationManager"/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
			<property name="hibernate.hbm2ddl.auto" value="CREATE"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/reservationManager"/>
			<property name="javax.persistence.jdbc.user" value="reservation"/>
			<property name="javax.persistence.jdbc.password" value="reservationManager"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
